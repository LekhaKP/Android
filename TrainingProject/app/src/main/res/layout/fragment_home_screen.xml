<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.qburst.lekha.trainingproject.HomeScreen"
    android:background="#361C4B"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/icon_with_name"
            >
            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_centerHorizontal="true"
                android:id="@+id/splashImage"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/face"
                    android:id="@+id/faceImage"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="4dp"
                    android:rotation="-45"
                    android:transformPivotX="35dp"
                    android:transformPivotY="85dp"
                    android:src="@drawable/masked"
                    android:id="@+id/mask"
                    />
            </FrameLayout>

            <TextView
                android:text="UNMASK"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/splashImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:id="@+id/textView" />
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/icon_with_name"
        android:layout_marginTop="25dp"
        >

        <Button
            android:background="@mipmap/rectangle2"
            android:fontFamily=""
            android:text="EASY"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/easy_button"
             />

        <Button
            android:background="@mipmap/rectangle2"
            android:textColor="#000"
            android:text="MEDIUM"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/medium_button"
            android:clickable="true"
            android:layout_toRightOf="@+id/easy_button"
            />
        <Button
            android:background="@mipmap/rectangle2"
            android:textColor="#000"
            android:text="HARD"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/difficult_button"
            android:clickable="true"
            android:layout_toRightOf="@+id/medium_button"

             />
    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
