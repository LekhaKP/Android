<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:id="@+id/exit_dialog">

    <TextView
        android:fontFamily="sans-serif"
        android:text="@string/exit"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        android:id="@+id/exit_title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:id="@+id/cancel_button"
        android:background="#40e0d0"
        android:text="@string/no"
        android:textStyle="bold"
        android:layout_marginTop="200dp"
        android:layout_alignLeft="@+id/exit_title"
        android:layout_alignStart="@+id/exit_title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:id="@+id/ok_button"
        android:background="#40e0d0"
        android:text="@string/yes"
        android:textStyle="bold"
        android:layout_marginTop="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/exit_title"
        android:layout_alignEnd="@+id/exit_title" />
</RelativeLayout>